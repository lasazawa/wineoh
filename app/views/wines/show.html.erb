<div class="container">
  <div class="row show_header">
    <div class="col-md-8 col-sm-8 col-xs-12 main_wine_show">
      <div class="left">
        <h1 class="dark"><%= @wine.title %></h1>
        <div class="left wine_img_show_container">
          <img class="left wine_img_show" src="http://www.bevmo.com<%= @wine.image %>" alt="<%= @wine.title %>">
        </div>
        <div class="show_info">
          <h4 class="price_lg"><%= @wine.price %>
            <% if @wine.price_sale != "" %>
              <span class="pipe"> | </span>
              <span class="sale-price"> SALE <%= @wine.price_sale %></span>
            <% else %>
              <%= @wine.price_sale %>
            <% end %>
          </h4>
          <p class="dark"><%= @wine.company %>, <%= @wine.vintage %>
            <br>
            <%= @wine.varietal %> â€” <%= @wine.region %>, <%= @wine.country %>
          </p>
          <p><%= @wine.description %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 r_col">
      <!-- same varietal recommendations -->
      <% if @varietal_rec.length > 1 %>
        <h4 class="rec_header">More <%= @wine.varietal %>'s</h4>
      <% end %>
      <% @varietal_rec.each do |wine| %>
        <% if wine.id != @wine.id %>
          <div class="wine_tile_show">
            <img class="wine_img_rec left" src="http://www.bevmo.com<%= wine.image %>"  alt="bottle">
              <h3><a href="/wines/<%= wine.id %>"><%= wine.title %></a></h3>
              <h4> <%= wine.price %>
                <% if wine.price_sale != "" %>
                    <span class="pipe"> | </span> <span class="sale-price">SALE <%= wine.price_sale %></span>
                <% else %>
                  <%= wine.price_sale %>
                <% end %>
              </h4>
              <span class="test"> <%= wine.my_score %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
