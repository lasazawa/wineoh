              <!-- <span class="pipe"> | </span> -->
              <br>
              <span class="sale-price"> SALE <%= @valueWhite.price_sale %></span>
            </div>
          <% else %>
            <%= @valueWhite.price_sale %>
          <% end %>
        </h4>
        <p class="dark">
        <span class="test"><%= @valueWhite.my_score %>, <%= @valueWhite.value_score %></span>
        <br>
        <%= @valueWhite.company %>, <%= @valueWhite.vintage %>
        <br>
        <%= @valueWhite.varietal %> — <%= @valueWhite.region %>, <%= @valueWhite.country %></p>
      </div>


      <div class="wine_tile col-md-4 col-sm-4 col-xs-12">
      <h4 class="rec_header">unique</h4>
        <% if @uniqueWhite.image != nil %>
          <img class="wine_img left" src="http://www.bevmo.com<%= @uniqueWhite.image %>"  alt="bottle">
        <% end %>
